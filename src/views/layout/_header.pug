.header.py-4
    .container
        .row.justify-content-between.align-items-center.justify-content-sm-between.align-items-sm-end
            //- Show Menu Btn
            .col-12.show-menu
                .display-btn#show-menu
                    i.fas.fa-bars
            //- Logo
            .col-lg-2.col-md-2.col-sm-12
                +logo
            //- Menu
            .col-lg-10.col-md-10.col-sm-12.r-pos
                .menu-bar.py-lg-0.py-md-5.px-md-5.py-sm-5.px-sm-5#menu-bar
                    .close-btn
                        i.fa.fa-times
                    .my-lg-0.my-md-5.my-sm-5
                        +logo
                    .row.justify-content-lg-between.justify-content-md-start.justify-content-sm-start.align-items-lg-center.align-items-md-start
                        .col-lg-8.col-md-12.col-sm-12
                            nav.menu
                                ul#main-menu.list.row.justify-content-lg-center.justify-content-md-start.justify-content-sm-start.align-items-lg-center.list-unstyled.align-items-md-start.align-items-lg-start.r-flex
                                    li.mx-lg-4.mx-md-0.my-md-2.my-sm-2.drop-menu
                                        a(href="#")
                                            span.ml-2 العروض
                                            i.fa.fa-angle-down.angle-down

                                        .sub-menu.box-shadow.border-radius.px-lg-4.py-lg-4.py-md-2.py-sm-2
                                            i.fa.fa-sort-up.sort-down
                                            ul.list-unstyled.flex-column.row.r-flex
                                                li.py-lg-2.py-md-2.py-sm-2: a(href="#") عروض البيع
                                                li.py-lg-2.py-md-2.py-sm-2: a(href="#") عروض الايجار

                                    li.mx-lg-4.mx-md-0.my-md-2.my-sm-2.drop-menu
                                        a(href="#")
                                            span.ml-2 الطلبات
                                            i.fa.fa-angle-down.angle-down

                                        .sub-menu.box-shadow.border-radius.px-lg-4.py-lg-4.py-md-2.py-sm-2
                                            i.fa.fa-sort-up.sort-down
                                            ul.list-unstyled.flex-column.row.r-flex
                                                li.py-lg-2.py-md-2.py-sm-2: a(href="#") طلبات البيع
                                                li.py-lg-2.py-md-2.py-sm-2: a(href="#") طلبات الايجار

                                    li.mx-lg-4.mx-md-0.my-md-2.my-sm-2: a(href="#") الوكلاع المعتمدون
                        //- Registry
                        .col-lg-4.col-md-12.col-sm-12
                            .login.mt-lg-0.mt-md-4.mt-sm-4
                                a(href="#").ml-lg-4.ml-md-0.ml-sm-0.my-md-2.my-sm-2
                                    i.fa.fa-user.primary-color
                                    span.mr-2 تسجيل الدخول
                                a(href="#").my-lg-0.my-md-2.my-sm-2
                                    i.fa.fa-user-plus.primary-color
                                    span.mr-2 انشاء حساب